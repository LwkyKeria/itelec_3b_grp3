<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:background="@drawable/layyy">

    <!-- Spacer View for space before the announcement -->
    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" /> <!-- Space before the announcement -->

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Announcement Title"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Announcement_description"
        android:textSize="14sp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="@color/white"
        android:textSize="12sp" />

</LinearLayout>
