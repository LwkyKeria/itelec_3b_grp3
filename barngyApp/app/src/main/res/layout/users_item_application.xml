<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:backgroundTint="@android:color/transparent"
    android:clipToPadding="false"
    android:background="#2F3651"
    android:paddingTop="16dp">

    <!-- Application Details -->
    <TextView
        android:id="@+id/tvApplicationID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Application ID: 12345"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User: John Doe"
        android:textColor="@android:color/white"
        android:layout_below="@id/tvApplicationID"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvDocumentRequested"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Document Requested: Barangay Clearance"
        android:textColor="@android:color/white"
        android:layout_below="@id/tvUserName"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvReasonForRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reason: Employment purposes"
        android:textColor="@android:color/white"
        android:layout_below="@id/tvDocumentRequested"
        android:layout_marginTop="4dp" />

    <!-- Approve/Disapprove Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_below="@id/tvReasonForRequest"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnApprove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approve"
            android:textColor="@android:color/white"
            android:backgroundTint="#28a745"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnDisapprove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disapprove"
            android:textColor="@android:color/white"
            android:backgroundTint="#dc3545" />
    </LinearLayout>
</RelativeLayout>
