<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createe">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="213dp"
        android:layout_height="46dp"
        android:text="Create Account"
        android:textAlignment="center"
        android:textColor="#49688d"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074" />

    <EditText
        android:id="@+id/etusername"
        android:layout_width="306dp"
        android:layout_height="69dp"
        android:background="@drawable/edittext_ripple"
        android:ems="10"
        android:hint="Username:"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="#49688d"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.207"
        tools:ignore="TextSizeCheck" />

    <!-- Password Warning TextView -->

    <EditText
        android:id="@+id/etpassword"
        android:layout_width="305dp"
        android:layout_height="58dp"
        android:background="@drawable/edittext_ripple"
        android:ems="10"
        android:hint="Password:"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="#49688d"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.316"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/tvPasswordWarning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"
        android:text="Password must be at least 7 characters long"
        app:layout_constraintStart_toStartOf="@+id/etpassword"
        app:layout_constraintEnd_toEndOf="@+id/etpassword"
        app:layout_constraintTop_toBottomOf="@+id/etpassword"
        app:layout_constraintBottom_toTopOf="@id/etLname" />

    <EditText
        android:id="@+id/etLname"
        android:layout_width="160dp"
        android:layout_height="49dp"
        android:background="@drawable/edittext_ripple"
        android:ems="10"
        android:hint="LastName"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#49688d"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.423"
        tools:ignore="TextSizeCheck" />

    <EditText
        android:id="@+id/etFname"
        android:layout_width="151dp"
        android:layout_height="49dp"
        android:background="@drawable/edittext_ripple"
        android:ems="10"
        android:hint="FirstName"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#49688d"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.423"
        tools:ignore="TextSizeCheck" />

    <EditText
        android:id="@+id/etMname"
        android:layout_width="167dp"
        android:layout_height="54dp"
        android:background="@drawable/edittext_ripple"
        android:ems="10"
        android:hint="MiddleName"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#49688d"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.541"
        tools:ignore="TextSizeCheck" />

    <EditText
        android:id="@+id/etCpnum"
        android:layout_width="310dp"
        android:layout_height="69dp"
        android:background="@drawable/edittext_ripple"
        android:ems="10"
        android:hint="Phone number:"
        android:inputType="phone"
        android:textColor="@color/black"
        android:textColorHint="#49688d"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.673"
        tools:ignore="TextSizeCheck" />

    <!-- Phone Number Warning TextView -->
    <TextView
        android:id="@+id/tvPhoneWarning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"
        android:text="Phone number must be exactly 11 digits"
        app:layout_constraintStart_toStartOf="@+id/etCpnum"
        app:layout_constraintEnd_toEndOf="@+id/etCpnum"
        app:layout_constraintTop_toBottomOf="@+id/etCpnum"
        app:layout_constraintBottom_toTopOf="@id/btncrt" />

    <Button
        android:id="@+id/btncrt"
        android:layout_width="143dp"
        android:layout_height="52dp"
        android:backgroundTint="#E8E8E8"
        android:text="Create"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.829"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:id="@+id/ivShowPassword"
        android:layout_width="27dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/show_hide_password"
        app:layout_constraintEnd_toEndOf="@+id/etpassword"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/etpassword"
        app:layout_constraintTop_toTopOf="@+id/etpassword"
        app:srcCompat="@drawable/eyeepas" />

</androidx.constraintlayout.widget.ConstraintLayout>
