<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Button to request document -->
    <Button
        android:id="@+id/requestDocumentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request Document"
        android:background="#2F3651" />

    <!-- TextView to display document status -->
    <TextView
        android:id="@+id/documentStatusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Waiting for request..."
        android:textColor="@android:color/black"
        android:paddingTop="16dp"
        android:textSize="16sp" />

    <!-- ProgressBar for loading -->
    <ProgressBar
        android:id="@+id/loadingSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" /> <!-- Initially hidden -->

</LinearLayout>
